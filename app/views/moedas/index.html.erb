<p id="notice"><%= notice %></p>

<h1>Moedas</h1>
<%= data_br(Date.today)%><br>
<%= nome_aplicacao %><br>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Acronym</th>
      <th>Url image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moedas.each do |moeda| %>
      <tr>
        <td><%= moeda.description %></td>

        <td><%= moeda.acronym %></td>
        <td><%= moeda.url_image %></td>
        <td><img src="<%= moeda.url_image %>" width="50px" height="50px"></td>
        <td><%= link_to 'Mostrar', moeda %>form.html.erb</td>
        <td><%= link_to 'Editar', edit_moeda_path(moeda) %></td>
        <td><%= link_to 'Apagar', moeda, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        <br>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Moeda', new_moeda_path %>
